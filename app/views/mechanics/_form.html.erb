<%= form_with(model: mechanic) do |form| %>
  <%= render "partials/errors", object: mechanic %>

  <div>
    <%= form.label :name, "Имя", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <% if mechanic.new_record? %>
    <%= form.submit "Добавить" %>
  <% else %>
    <%= form.submit "Обновить" %>
  <% end %>
<% end %>
