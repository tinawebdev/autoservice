<% errors = object.errors %>

<% if errors.any? %>
  <div class="content notification is-warning">
    <strong>
      <%= t('messages.not_saved', count: errors.count) %>
    </strong>
      <ul>
        <% errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>    
  </div>
<% end %>
